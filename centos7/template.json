{
  "variables": {
      "atlas_token": "{{env `CENTOS6_PUSH_TOKEN`}}"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://distro.ibiblio.org/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
      "iso_checksum": "d07ab3e615c66a8b2e9a50f4852e6a77",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "600s",
      "boot_command": ["<esc>", "<wait>","linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg", "<enter>"],
      "boot_wait": "5s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "http_directory": "http",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "vm_name": "centos7",
      "headless": false,
      "virtualbox_version_file": ".vbox_version"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/barebones_setup.sh"
    }
  ],

  "push": {
      "name": "bkyoung/centos7",
      "token": "{{user `atlas_token`}}"
    },

  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "vagrant.box"
    }
  ]
}
